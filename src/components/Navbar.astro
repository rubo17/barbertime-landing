---
const navLinks = [
	{ href: "#caracteristicas", label: "Características", redirect: false },
	{ href: "#empieza", label: "Empieza", redirect: false },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 border-b border-white/10 bg-bg/30 backdrop-blur-xl">
	<div class="mx-auto max-w-6xl px-6 py-4">
		<div class="flex items-center justify-between">
			<a href="/" class="text-xl font-bold">
				Barber<span class="text-sub">Time</span>
			</a>

			<div class="hidden items-center gap-8 md:flex">
				{navLinks.map((link) => (
					<a
						href={link.href}
						class="text-sm text-sub transition-colors hover:text-text"
					>
						{link.label}
					</a>
				))}
				<a
					href="#"
					target="_blank"
					rel="noopener noreferrer"
					class="group relative overflow-hidden rounded-lg bg-primary/90 px-4 py-2 text-sm font-medium text-black transition-all duration-300 hover:bg-primary hover:shadow-[0_0_15px_rgba(6,182,212,0.3)]"
				>
					<span class="relative z-10">App Clientes</span>
					<div class="absolute inset-0 -translate-x-full bg-gradient-to-r from-transparent via-white/10 to-transparent transition-transform duration-500 group-hover:translate-x-full"></div>
				</a>
			</div>

			<button
				id="mobile-menu-btn"
				class="flex h-10 w-10 items-center justify-center md:hidden"
				aria-label="Abrir menú"
			>
				<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
				</svg>
			</button>
		</div>

		<div id="mobile-menu" class="hidden pt-4 pb-2 md:hidden">
			{navLinks.map((link) => (
				<a
					href={link.href}
					class="block py-2 text-sub transition-colors hover:text-text"
				>
					{link.label}
				</a>
			))}
			<a
				href="#"
				target="_blank"
				rel="noopener noreferrer"
				class="mt-4 block rounded-lg bg-primary/90 py-3 text-center font-medium text-black transition-all duration-300 active:scale-[0.98]"
			>
				App Clientes
			</a>
		</div>
	</div>
</nav>

<script>
	const btn = document.getElementById('mobile-menu-btn');
	const menu = document.getElementById('mobile-menu');

	btn?.addEventListener('click', () => {
		menu?.classList.toggle('hidden');
	});
</script>
